<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data class=".recyclerviewapp.PersonTitleBinding">

        <import type="android.view.View" />

        <variable
            name="bindingItem"
            type="com.selva.recyclerviewapp.data.PersonViewItem.TitleItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingHorizontal="18dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/title_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{bindingItem.title}"
            android:textColor="#010102"
            android:textSize="24sp"
            tools:text="Education" />
    </LinearLayout>
</layout>